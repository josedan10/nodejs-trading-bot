{
  "name": "telegram-trading-bot",
  "version": "1.2.0",
  "description": "Tading bot for telegram using node.js",
  "main": "index.js",
  "engines": {
    "node": "12.x"
  },
  "scripts": {
    "start": "node index.js",
    "watch": "nodemon index.js",
    "pretest": "./node_modules/.bin/eslint --ignore-path .gitignore . --fix",
    "release": "./node_modules/.bin/standard-version",
    "changelog": "./node_modules/.bin/conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "test": "./node_modules/.bin/jest --watchAll --detectOpenHandles --coverage"
  },
  "keywords": [
    "nodejs",
    "telegram",
    "trading",
    "bot"
  ],
  "author": "Jos√© Daniel Quintero",
  "license": "GPL-3.0",
  "dependencies": {
    "axios": "^0.19.2",
    "body-parser": "^1.19.0",
    "capture-website": "^1.2.0",
    "conventional-changelog-cli": "^2.1.0",
    "cors": "^2.8.5",
    "cron": "^1.8.2",
    "crypto-js": "^4.0.0",
    "csv-parser": "^2.3.3",
    "csv-reader": "^1.0.6",
    "csv-writer": "^1.6.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "form-data": "^3.0.0",
    "googleapis": "^39.2.0",
    "moment": "^2.29.4",
    "moment-timezone": "^0.5.31",
    "npm": "^6.14.7",
    "socket.io": "^2.3.0",
    "ws": "^7.3.1",
    "ws-reconnect": "^1.0.7"
  },
  "devDependencies": {
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^11.0.0",
    "eslint": "^7.7.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "jest-chain": "^1.1.5",
    "jest-extended": "^0.11.5",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "standard-version": "^9.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.js": [
      "./node_modules/.bin/prettier --check --write --loglevel warn",
      "./node_modules/.bin/eslint --fix --ignore-path .gitignore",
      "./node_modules/.bin/jest --findRelatedTests"
    ]
  },
  "jest": {
    "setupFilesAfterEnv": [
      "./jestSetup.js"
    ]
  }
}
