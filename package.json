{
  "name": "telegram-trading-bot",
  "version": "1.0.2",
  "description": "Tading bot for telegram using node.js",
  "main": "index.js",
  "engines": {
    "node": "12.x"
  },
  "scripts": {
    "start": "node index.js",
    "watch": "nodemon index.js",
    "pretest": "./node_modules/.bin/eslint --ignore-path .gitignore . --fix",
    "release": "./node_modules/.bin/standard-version",
    "test": "./node_modules/.bin/jest --watchAll --detectOpenHandles"
  },
  "keywords": [
    "nodejs",
    "telegram",
    "trading",
    "bot"
  ],
  "author": "Jos√© Daniel Quintero",
  "license": "GPL-3.0",
  "dependencies": {
    "axios": "^0.19.2",
    "body-parser": "^1.19.0",
    "cron": "^1.8.2",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "moment": "^2.26.0",
    "npm": "^6.14.5",
    "socket.io": "^2.3.0",
    "ws": "^7.3.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "eslint": "^7.2.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-promise": "^4.2.1",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "lint-staged": "^10.2.10",
    "prettier": "^2.0.5",
    "standard-version": "^8.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.js": [
      "./node_modules/.bin/prettier --check --write --loglevel warn",
      "./node_modules/.bin/eslint --fix --ignore-path .gitignore",
      "./node_modules/.bin/jest --findRelatedTests"
    ]
  }
}
