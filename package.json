{
  "name": "telegram-trading-bot",
  "version": "0.0.1",
  "description": "Tading bot for telegram using node.js",
  "main": "index.js",
  "scripts": {
    "start": "nodemon index.js",
    "pretest": "./node_modules/.bin/eslint --ignore-path .gitignore . --fix",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "nodejs",
    "telegram",
    "trading",
    "bot"
  ],
  "author": "Jos√© Daniel Quintero",
  "license": "GPL-3.0",
  "dependencies": {
    "axios": "^0.19.2",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "socket.io": "^2.3.0"
  },
  "devDependencies": {
    "eslint": "^7.2.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-promise": "^4.2.1",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "lint-staged": "^10.2.9",
    "prettier": "^2.0.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "./node_modules/.bin/prettier --check --write --loglevel warn",
      "./node_modules/.bin/eslint --fix --ignore-path .gitignore",
      "./node_modules/.bin/jest --findRelatedTests"
    ]
  }
